<section class="hero">
  <div class="hero-orb hero-orb-1" aria-hidden="true"></div>
  <div class="hero-orb hero-orb-2" aria-hidden="true"></div>

  <div class="container hero-layout">

    <!-- Left: headline + CTA -->
    <div class="hero-left">
      <div class="badge">
        <span class="badge-dot"></span>
        Open source &middot; Free &middot; No signup
      </div>

      <h1>
        Ship code,<br />
        <span class="h1-line2">not <span class="gradient-text">vulnerabilities.</span></span>
      </h1>

      <p class="hero-sub">
        One command scans secrets, detects OWASP vulnerabilities,
        audits CVEs, and auto-fixes what it finds — before you push.
      </p>

      <div class="install-box">
        <span class="install-prompt">$</span>
        <span class="install-cmd">npx ship-safe agent .</span>
        <button class="copy-btn" id="hero-copy" title="Copy command" aria-label="Copy install command">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
          </svg>
        </button>
      </div>

      <div class="hero-ctas">
        <a href="https://github.com/asamassekou10/ship-safe" class="btn btn-primary" target="_blank" rel="noopener">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0 0 24 12c0-6.63-5.37-12-12-12z"/>
          </svg>
          View on GitHub
        </a>
        <a href="#how-it-works" class="btn btn-ghost">See how it works</a>
      </div>
    </div>

    <!-- Right: security dashboard card -->
    <div class="hero-right" aria-hidden="true">
      <div class="dash-card">

        <!-- Title bar -->
        <div class="dash-header">
          <div class="dash-dots">
            <span class="dot dot-r"></span>
            <span class="dot dot-y"></span>
            <span class="dot dot-g"></span>
          </div>
          <span class="dash-title">ship-safe agent .</span>
          <span class="dash-badge">LIVE</span>
        </div>

        <!-- Scan output lines -->
        <div class="dash-terminal">
          <div class="term-line">
            <span class="term-prompt">▸</span>
            <span class="term-text dim">Scanning 847 files...</span>
          </div>
          <div class="term-line">
            <span class="term-prompt red">✗</span>
            <span class="term-text">4 secrets found</span>
            <span class="term-tag tag-red">CRITICAL</span>
          </div>
          <div class="term-line">
            <span class="term-prompt yellow">!</span>
            <span class="term-text">3 code vulnerabilities</span>
            <span class="term-tag tag-yellow">HIGH</span>
          </div>
          <div class="term-line">
            <span class="term-prompt green">✔</span>
            <span class="term-text dim">Dependencies clean</span>
          </div>
        </div>

        <!-- Score section -->
        <div class="dash-score">
          <div class="score-left">
            <div class="ring-wrap">
              <svg viewBox="0 0 96 96" width="96" height="96" class="score-ring">
                <circle cx="48" cy="48" r="40" fill="none" stroke="var(--border)" stroke-width="6"/>
                <circle
                  cx="48" cy="48" r="40"
                  fill="none"
                  stroke="url(#scoreGrad)"
                  stroke-width="6"
                  stroke-linecap="round"
                  stroke-dasharray="251.3"
                  stroke-dashoffset="218"
                  transform="rotate(-90 48 48)"
                  class="score-arc"
                  id="score-arc"
                />
                <defs>
                  <linearGradient id="scoreGrad" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" stop-color="#22d3ee"/>
                    <stop offset="100%" stop-color="#60a5fa"/>
                  </linearGradient>
                </defs>
              </svg>
              <div class="ring-label">
                <span class="score-num" id="score-val">0</span>
                <span class="score-sub">/100</span>
              </div>
            </div>
            <div class="grade-row">
              <span class="grade-letter">A</span>
              <span class="grade-text">Ship it!</span>
            </div>
          </div>

          <div class="score-right">
            <div class="metric">
              <div class="metric-top">
                <span class="metric-label">Secrets</span>
                <span class="metric-val ok">0</span>
              </div>
              <div class="metric-bar"><div class="metric-fill fill-full" style="background: var(--green)"></div></div>
            </div>
            <div class="metric">
              <div class="metric-top">
                <span class="metric-label">Code vulns</span>
                <span class="metric-val ok">0</span>
              </div>
              <div class="metric-bar"><div class="metric-fill fill-full" style="background: var(--green)"></div></div>
            </div>
            <div class="metric">
              <div class="metric-top">
                <span class="metric-label">CVEs</span>
                <span class="metric-val ok">0</span>
              </div>
              <div class="metric-bar"><div class="metric-fill fill-full" style="background: var(--green)"></div></div>
            </div>
            <div class="metric-files">847 files · 3.2s</div>
          </div>
        </div>

        <!-- Footer status -->
        <div class="dash-footer">
          <span class="status-dot"></span>
          <span>All checks passed — ready to push</span>
        </div>
      </div>

      <!-- Floating badges -->
      <div class="float-badge float-badge-1">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><path d="M10.29 3.86L1.82 18a2 2 0 0 0 1.71 3h16.94a2 2 0 0 0 1.71-3L13.71 3.86a2 2 0 0 0-3.42 0z"/><line x1="12" y1="9" x2="12" y2="13"/><line x1="12" y1="17" x2="12.01" y2="17"/></svg>
        Secret detected
      </div>
      <div class="float-badge float-badge-2">
        <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>
        Auto-fixed
      </div>
    </div>

  </div>
</section>

<script>
  document.getElementById('hero-copy')?.addEventListener('click', function() {
    navigator.clipboard.writeText('npx ship-safe agent .').then(() => {
      this.style.color = 'var(--green)';
      setTimeout(() => { this.style.color = ''; }, 1500);
    });
  });

  // Animate score counter + ring
  function easeOut(t: number) { return 1 - Math.pow(1 - t, 3); }
  const scoreEl = document.getElementById('score-val');
  const arcEl   = document.getElementById('score-arc') as SVGCircleElement | null;
  if (scoreEl && arcEl) {
    const target   = 100;
    const fullDash = 251.3;
    const duration = 1800;
    const start    = performance.now();
    function tick(now: number) {
      const p  = Math.min((now - start) / duration, 1);
      const ep = easeOut(p);
      (scoreEl as HTMLElement).textContent = String(Math.round(ep * target));
      // dashoffset: 251.3 = 0%, 0 = 100%
      arcEl.style.strokeDashoffset = String(fullDash * (1 - ep));
      if (p < 1) requestAnimationFrame(tick);
    }
    requestAnimationFrame(tick);
  }
</script>

<style>
  .hero {
    padding: 7rem 0 5rem;
    position: relative;
    overflow: hidden;
  }

  .hero-orb {
    position: absolute;
    border-radius: 50%;
    filter: blur(80px);
    pointer-events: none;
    z-index: 0;
  }
  .hero-orb-1 {
    width: 560px; height: 560px;
    top: -180px; left: -100px;
    background: radial-gradient(circle, rgba(34,211,238,0.10) 0%, transparent 70%);
  }
  .hero-orb-2 {
    width: 400px; height: 400px;
    top: 60px; right: -80px;
    background: radial-gradient(circle, rgba(59,130,246,0.12) 0%, transparent 70%);
  }

  .hero-layout {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3.5rem;
    align-items: center;
  }

  /* ── Left ── */
  .hero-left { display: flex; flex-direction: column; align-items: flex-start; }

  .badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: rgba(34,211,238,0.07);
    border: 1px solid rgba(34,211,238,0.18);
    color: var(--cyan);
    font-size: 0.72rem;
    font-weight: 600;
    padding: 0.3rem 0.85rem;
    border-radius: 999px;
    margin-bottom: 1.5rem;
    letter-spacing: 0.07em;
    text-transform: uppercase;
  }
  .badge-dot {
    width: 6px; height: 6px;
    border-radius: 50%;
    background: var(--cyan);
    animation: pulse-dot 2s ease-in-out infinite;
    flex-shrink: 0;
  }
  @keyframes pulse-dot {
    0%, 100% { opacity: 1; box-shadow: 0 0 0 0 rgba(34,211,238,0.5); }
    50%       { opacity: 0.7; box-shadow: 0 0 0 4px rgba(34,211,238,0); }
  }

  h1 {
    font-size: clamp(2.4rem, 4.5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    margin-bottom: 1.25rem;
    animation: fade-up 0.6s ease both;
  }
  /* Prevent the second line from wrapping — always 2 lines max */
  .h1-line2 { white-space: nowrap; display: block; }

  @keyframes fade-up {
    from { opacity: 0; transform: translateY(20px); }
    to   { opacity: 1; transform: none; }
  }

  .gradient-text {
    background: linear-gradient(135deg, var(--cyan) 0%, #60a5fa 55%, #2563eb 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-sub {
    color: var(--text-muted);
    font-size: 1rem;
    max-width: 440px;
    margin: 0 0 1.75rem;
    line-height: 1.75;
    animation: fade-up 0.6s 0.15s ease both;
  }

  .install-box {
    animation: fade-up 0.6s 0.3s ease both;
    margin-bottom: 1.5rem;
  }
  .install-cmd { color: var(--text); font-weight: 500; }

  .hero-ctas {
    display: flex;
    gap: 0.85rem;
    flex-wrap: wrap;
    animation: fade-up 0.6s 0.45s ease both;
  }

  /* ── Right: dashboard card ── */
  .hero-right {
    position: relative;
    display: flex;
    justify-content: center;
    animation: fade-up 0.7s 0.2s ease both;
  }

  .dash-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: 16px;
    width: 100%;
    max-width: 380px;
    overflow: hidden;
    box-shadow:
      0 0 0 1px rgba(34,211,238,0.06),
      0 32px 80px rgba(0,0,0,0.6),
      0 0 60px rgba(34,211,238,0.04);
  }

  /* Header */
  .dash-header {
    background: var(--bg-card2);
    border-bottom: 1px solid var(--border);
    padding: 0.7rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .dash-dots { display: flex; gap: 0.35rem; }
  .dot { width: 10px; height: 10px; border-radius: 50%; }
  .dot-r { background: #f87171; }
  .dot-y { background: #fbbf24; }
  .dot-g { background: #4ade80; }
  .dash-title {
    flex: 1;
    font-family: var(--font-mono);
    font-size: 0.73rem;
    color: var(--text-dim);
    margin-left: 0.4rem;
  }
  .dash-badge {
    font-family: var(--font-mono);
    font-size: 0.62rem;
    font-weight: 700;
    letter-spacing: 0.08em;
    color: var(--green);
    background: rgba(74,222,128,0.1);
    border: 1px solid rgba(74,222,128,0.25);
    padding: 0.15em 0.5em;
    border-radius: 4px;
  }

  /* Terminal scan output */
  .dash-terminal {
    padding: 0.85rem 1rem;
    border-bottom: 1px solid var(--border);
    display: flex;
    flex-direction: column;
    gap: 0.35rem;
    background: rgba(0,0,0,0.2);
  }
  .term-line {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.73rem;
  }
  .term-prompt {
    width: 14px;
    text-align: center;
    flex-shrink: 0;
    font-size: 0.7rem;
  }
  .term-prompt.red    { color: var(--red); }
  .term-prompt.yellow { color: var(--yellow); }
  .term-prompt.green  { color: var(--green); }
  .term-text { color: var(--text-muted); flex: 1; }
  .term-text.dim { color: var(--text-dim); }
  .term-tag {
    font-size: 0.6rem;
    font-weight: 700;
    letter-spacing: 0.06em;
    padding: 0.1em 0.45em;
    border-radius: 3px;
    flex-shrink: 0;
  }
  .tag-red    { background: rgba(248,113,113,0.15); color: var(--red);    border: 1px solid rgba(248,113,113,0.3); }
  .tag-yellow { background: rgba(251,191,36,0.12);  color: var(--yellow); border: 1px solid rgba(251,191,36,0.3); }

  /* Score section */
  .dash-score {
    padding: 1.25rem 1.1rem;
    display: flex;
    gap: 1.25rem;
    align-items: center;
  }

  .score-left {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
    flex-shrink: 0;
  }

  .ring-wrap {
    position: relative;
    width: 96px;
    height: 96px;
  }
  .score-ring { display: block; }
  .score-arc  { transition: stroke-dashoffset 1.8s cubic-bezier(0.16,1,0.3,1); }

  .ring-label {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 0;
  }
  .score-num {
    font-family: var(--font-mono);
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--cyan);
    line-height: 1;
  }
  .score-sub {
    font-family: var(--font-mono);
    font-size: 0.58rem;
    color: var(--text-dim);
    line-height: 1;
    margin-top: 1px;
  }

  .grade-row {
    display: flex;
    align-items: baseline;
    gap: 0.35rem;
  }
  .grade-letter {
    font-family: var(--font-mono);
    font-size: 1.3rem;
    font-weight: 800;
    color: var(--cyan);
    line-height: 1;
  }
  .grade-text {
    font-size: 0.72rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  /* Metric bars */
  .score-right {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 0.7rem;
  }
  .metric { display: flex; flex-direction: column; gap: 0.25rem; }
  .metric-top {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    font-family: var(--font-mono);
    font-size: 0.68rem;
  }
  .metric-label { color: var(--text-dim); }
  .metric-val { font-weight: 700; }
  .metric-val.ok { color: var(--green); }
  .metric-bar {
    height: 4px;
    background: var(--border);
    border-radius: 99px;
    overflow: hidden;
  }
  .metric-fill {
    height: 100%;
    border-radius: 99px;
    transition: width 1.8s cubic-bezier(0.16,1,0.3,1);
  }
  .fill-full { width: 100%; }

  .metric-files {
    font-family: var(--font-mono);
    font-size: 0.65rem;
    color: var(--text-dim);
    margin-top: 0.2rem;
  }

  /* Footer status */
  .dash-footer {
    background: rgba(74,222,128,0.05);
    border-top: 1px solid rgba(74,222,128,0.15);
    padding: 0.55rem 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.72rem;
    font-weight: 500;
    color: var(--green);
    font-family: var(--font-mono);
  }
  .status-dot {
    width: 6px; height: 6px;
    border-radius: 50%;
    background: var(--green);
    box-shadow: 0 0 6px var(--green);
    animation: pulse-dot 2s ease-in-out infinite;
    flex-shrink: 0;
  }

  /* Floating badges */
  .float-badge {
    position: absolute;
    display: flex;
    align-items: center;
    gap: 0.4rem;
    border-radius: 8px;
    padding: 0.4rem 0.8rem;
    font-size: 0.72rem;
    font-weight: 600;
    font-family: var(--font-mono);
    box-shadow: 0 8px 24px rgba(0,0,0,0.4);
    white-space: nowrap;
    animation: float-in 0.5s ease both;
  }
  .float-badge-1 {
    top: -16px; right: -8px;
    animation-delay: 0.7s;
    color: var(--red);
    border: 1px solid rgba(248,113,113,0.3);
    background: rgba(248,113,113,0.08);
  }
  .float-badge-2 {
    bottom: -16px; left: -8px;
    animation-delay: 0.9s;
    color: var(--green);
    border: 1px solid rgba(74,222,128,0.3);
    background: rgba(74,222,128,0.08);
  }
  @keyframes float-in {
    from { opacity: 0; transform: scale(0.85) translateY(4px); }
    to   { opacity: 1; transform: none; }
  }

  /* Mobile */
  @media (max-width: 800px) {
    .hero { padding: 5.5rem 0 3.5rem; }
    .hero-layout {
      grid-template-columns: 1fr;
      gap: 2.5rem;
      text-align: center;
    }
    .hero-left { align-items: center; }
    .h1-line2  { white-space: normal; }
    .hero-sub  { margin: 0 auto 1.75rem; }
    .hero-ctas { justify-content: center; }
    .hero-right { justify-content: center; }
    .float-badge-1 { top: -14px; right: 8px; }
    .float-badge-2 { bottom: -14px; left: 8px; }
  }
</style>
